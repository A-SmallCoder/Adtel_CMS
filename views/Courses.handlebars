<link rel="stylesheet" href="/css/courses.css"/>

<div class="container">

<div class="row align-middle">
    <div id="search" class="p-2 m-3 col-md-10">
        <input id="searchfield" type="text" placeholder="Search courses" />
        <button id="searchbtn" type="submit"><i class="fa fa-search"></i></button>
    </div>
    <button type="button" id="filterbtn" class="m-3 col-md-1" onclick="filter()"><strong>Filter</strong></button>
</div>

<div id="filterdiv" class="col-md-8 col-sm-12 m-2">
    <p class="pt-2"><strong>Filter by skills used in the course</strong></p>
    <input type="text" class="col-md-6 col-sm-12" placeholder="Start typing the name of a skill" />
    <br />
    <span class="choice">css</span>
</div>

</div>

<script>

    function filter() {
        var x = document.getElementById("filterdiv");
        if (x.style.display == "none") {
            x.style.display = "block";
        } else {
            x.style.display = "none";
        }
    }
</script>